{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "jsx": "react-native",
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",   // Ensure this line is not commented out
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "./App/**/*.ts",
    "./App/**/*.tsx",
    "./App/declarations.d.ts"
  ]
}

